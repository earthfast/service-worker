{
    "extends": "./tsconfig.json",
    "ts-node": {
      "transpileOnly": true,
      "compilerOptions": {
        "module": "commonjs"
      }
    },
    "compilerOptions": {
      "moduleResolution": "node",
      "allowJs": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*",
      "vendor/**/*"
    ],
    "exclude": []
  }
  